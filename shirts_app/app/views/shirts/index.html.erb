<%= form_tag "/", method: :get do %>
	<%= text_field_tag :q, params[:q] %>
	<%= submit_tag "Search" %>
<% end%>

<p><%= link_to 'new shirt', new_shirt_path(@shirt) %>


<h1>Check out our shirts below</h1>
<% @shirts.each do |shirt| %>
	<div class="shirt">
		<%= link_to(image_tag(shirt.image), shirt_path(shirt)) %>
		<h3><%= link_to shirt.name, shirt_path(shirt.id) %></h3>
		<p><%= shirt.description %></p>
	</div>
<% end %>
